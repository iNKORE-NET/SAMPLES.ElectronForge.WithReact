{
    "compilerOptions":
    {
        "target": "ES6",
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths":
        {
            "soruce/*": [ "./source/*" ],
            "public/*": [ "./public/*" ],
            "*": [ "node_modules/*" ]
        }
    },
    "include": [ "source/**/*" ],
    "files": [ "source/shell/resources.d.ts" ],
    "exclude": [ "node_modules", ".build", ".webpack" ]

}
